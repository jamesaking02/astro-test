<script>
  const navBttn = document.querySelector(".nav-button")
  const nav = document.querySelector("nav")
  const navBttnLines = document.querySelectorAll(".line")
  const body = document.querySelector("body")
  navBttn.addEventListener('click', () => {
    
    
    navBttnLines.forEach((line) => {
      line.classList.toggle("active")
    })

    nav.classList.toggle("active")
    body.classList.toggle("active")

    //animate nav items when menu animation is done
    nav.addEventListener('transitionrun', () => {
      document.querySelector("ul").classList.add("animated")
      
    })
    document.querySelector("ul").classList.remove("animated")

    
  })



  // Close the nav menu when clicking on a nav item
  const navItem = document.querySelectorAll(".nav-item")
  navItem.forEach((item) => {
    item.addEventListener("click", () => {
      if (nav.classList.contains("active")) {
        nav.classList.remove("active")
        body.classList.remove("active")

        navBttnLines.forEach((line) => {
          line.classList.remove("active")
        })

      }
    })
  })

  // Clicking nav logo closes menu
  const navLogo = document.querySelector(".nav-logo")
  navLogo.addEventListener('click', () => {
    if (nav.classList.contains("active")) {
        nav.classList.remove("active")
        body.classList.remove("active")

        navBttnLines.forEach((line) => {
          line.classList.remove("active")
        })

      }
  }) 

</script>

<button class="nav-button">
  <span class="line one"></span>
  <span class="line two"></span>
  <span class="line three"></span>
</button>

<style>
.nav-button {
  width: 1.5rem;
  height: auto;
  display: flex;
  flex-direction: column;
  gap: .3rem;

  cursor: pointer;
  transition: opacity .2s ease;
}

.nav-button:hover {
  opacity: .75;
}

.line {
  width: 100%;
  height: 2px;
  background-color: var(--white);
  transition: transform .3s ease;
  }

  .one.active {
  transform: translateY(5px) rotate(45deg);
  /* transition: transform .3s ease; */
  }

  .two.active {
  display: none;
  }

  .three.active {
  transform: translateY(-1px) rotate(-45deg);
  /* transition: transform .3s ease; */
  }
</style>